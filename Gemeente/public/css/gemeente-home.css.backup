/* Gemeente Home Page Styles */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    background: #f8fafc;
    color: #1e293b;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

/* Header */
.header {
    background: #ffffff;
    box-shadow: 0 2px 10px rgba(15, 23, 42, 0.08);
    position: sticky;
    top: 0;
    z-index: 100;
}

.nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
}

.logo-icon {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, #00a651, #008a43);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
}

.logo-text {
    color: #00a651;
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.2;
}

.logo-text .gemeente {
    display: block;
    font-size: 1rem;
    font-weight: 500;
    color: #0f172a;
}

.header-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.nav-item {
    color: #475569;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: color 0.2s ease;
    position: relative;
}

.nav-item::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 100%;
    height: 2px;
    background: #00a651;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.2s ease;
}

.nav-item:hover,
.nav-item:focus {
    color: #00a651;
}

.nav-item:hover::after,
.nav-item:focus::after {
    transform: scaleX(1);
}

.header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-decoration: none;
    border-radius: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    transition: all 0.2s ease;
    border: 2px solid transparent;
}

.btn-primary {
    background: #00a651;
    color: #ffffff;
    border-color: #00a651;
}

.btn-primary:hover,
.btn-primary:focus {
    background: #008a43;
    border-color: #008a43;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 138, 67, 0.18);
}

.btn-secondary {
    background: #ffffff;
    color: #00a651;
    border-color: #00a651;
}

.btn-secondary:hover,
.btn-secondary:focus {
    background: #00a651;
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 166, 81, 0.18);
}

/* Hero */
.hero {
    background: linear-gradient(135deg, #00a651 0%, #008a43 100%);
    color: #ffffff;
    padding: 5rem 0 6rem;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(255, 255, 255, 0.2), transparent 55%);
    pointer-events: none;
}

.hero-content {
    position: relative;
    max-width: 820px;
    margin: 0 auto;
    z-index: 1;
}

.hero-title {
    font-size: clamp(2.2rem, 4vw, 3.25rem);
    font-weight: 700;
    margin-bottom: 1rem;
}

.hero-subtitle {
    font-size: 1.2rem;
    opacity: 0.95;
    margin-bottom: 2.5rem;
}

.hero-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
}

/* Services */
.section-title {
    font-size: clamp(2rem, 3vw, 2.5rem);
    font-weight: 700;
    text-align: center;
    color: #0f172a;
    margin-bottom: 1rem;
}

.section-subtitle {
    color: #64748b;
    text-align: center;
    max-width: 640px;
    margin: 0 auto 3rem;
    font-size: 1.1rem;
}

.services {
    padding: 5rem 0;
    background: #ffffff;
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
}

.service-card {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    min-height: 100%;
}

.service-card:hover {
    transform: translateY(-6px);
    border-color: #00a651;
    box-shadow: 0 16px 32px rgba(15, 118, 110, 0.12);
}

.service-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto;
    border-radius: 50%;
    background: #00a651;
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    box-shadow: 0 10px 25px rgba(0, 166, 81, 0.15);
}

.service-card h3 {
    font-size: 1.35rem;
    font-weight: 600;
    color: #0f172a;
}

.service-card p {
    color: #64748b;
    flex: 1;
}

.service-link {
    text-decoration: none;
    color: #00a651;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    transition: color 0.2s ease;
}

.service-link::after {
    content: 'â†’';
    transition: transform 0.2s ease;
}

.service-card:hover .service-link {
    color: #008a43;
}

.service-card:hover .service-link::after {
    transform: translateX(4px);
}

/* Contact */
.contact {
    background: #f1f5f9;
    padding: 4rem 0;
}

.contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
}

.contact-card {
    background: #ffffff;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
    border: 1px solid #e2e8f0;
}

.contact-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #0f172a;
}

.contact-card p {
    color: #475569;
    margin-bottom: 0.5rem;
}

.contact-card strong {
    color: #0f172a;
}

/* Footer */
.footer {
    background: #0f172a;
    color: #e2e8f0;
    padding: 3rem 0 1.5rem;
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
}

.footer-section h4 {
    color: #00a651;
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.footer-section p,
.footer-section a {
    color: #cbd5e1;
    text-decoration: none;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 0.95rem;
}

.footer-section a:hover {
    color: #ffffff;
}

.footer-bottom {
    border-top: 1px solid rgba(148, 163, 184, 0.2);
    text-align: center;
    padding-top: 1rem;
    font-size: 0.9rem;
    color: #94a3b8;
}

/* Responsive */
@media (max-width: 992px) {
    .header-nav {
        display: none;
    }

    .header-actions {
        display: none;
    }

    .nav {
        justify-content: center;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 0 1.25rem;
    }

    .hero {
        padding: 4rem 0 5rem;
    }

    .hero-buttons {
        flex-direction: column;
    }
}

@media (max-width: 480px) {
    .logo-text {
        font-size: 1.25rem;
    }

    .hero-title {
        font-size: 2rem;
    }

    .hero-subtitle {
        font-size: 1rem;
    }
}
